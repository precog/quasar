{
    "name": "field and flattened array value and index",
    "backends": {
        "couchbase":         "pending",
        "lwc_local":         "pendingIgnoreFieldOrder",
        "marklogic_json":    "pending",
        "marklogic_xml":     "pending",
        "mimir":             "pendingIgnoreFieldOrder",
        "mongodb_3_2":       "pending",
        "mongodb_3_4":       "pending",
        "mongodb_3_4_13":    "pending",
        "mongodb_3_6":       "pending",
        "mongodb_read_only": "pending"
    },
    "data": "flattenable.data",
    "query": "select a, b[*], b[*:] as i from flattenable",
    "predicate": "exactly",
    "ignoreResultOrder": true,
    "expected": [
      {"a": 1, "b": true, "i": 0},
      {"a": 1, "b": true, "i": 1},
      {"a": 1, "b": true, "i": 2},
      {"a": 2, "b": false, "i": 0},
      {"a": 2, "b": false, "i": 1},
      {"a": 3},
      {"a": 4}
    ]
}
